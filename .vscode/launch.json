{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üéÆ Launch Game - Direct Browser",
            "type": "chrome",
            "request": "launch",
            "file": "${workspaceFolder}/client/index.html",
            "webRoot": "${workspaceFolder}/client",
            "runtimeArgs": [
                "--disable-web-security",
                "--disable-features=VizDisplayCompositor",
                "--allow-file-access-from-files"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "üîß Debug Game - Console Logging",
            "type": "chrome",
            "request": "launch",
            "file": "${workspaceFolder}/client/index.html",
            "webRoot": "${workspaceFolder}/client",
            "runtimeArgs": [
                "--disable-web-security",
                "--disable-features=VizDisplayCompositor",
                "--allow-file-access-from-files",
                "--enable-logging",
                "--log-level=1",
                "--disable-background-networking",
                "--auto-open-devtools-for-tabs"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "trace": true
        },
        {
            "name": "üåê Launch Game - Live Server",
            "type": "chrome",
            "request": "launch",
            "url": "http://127.0.0.1:5500/client/index.html",
            "webRoot": "${workspaceFolder}/client",
            "preLaunchTask": "üåê Start Live Server",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "üåê P2P Host (Port 8080)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/client",
            "preLaunchTask": "üê≥ Start P2P Development Environment",
            "runtimeArgs": [
                "--disable-web-security",
                "--enable-features=SharedArrayBuffer",
                "--enable-webrtc-capture-all-screens"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "ü§ù P2P Peer (Port 8081)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8081",
            "webRoot": "${workspaceFolder}/client",
            "runtimeArgs": [
                "--disable-web-security",
                "--enable-features=SharedArrayBuffer",
                "--enable-webrtc-capture-all-screens",
                "--user-data-dir=${workspaceFolder}/.chrome-peer"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "üß™ Test WebAssembly WASM",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/client",
            "runtimeArgs": [
                "--disable-web-security",
                "--enable-features=SharedArrayBuffer",
                "--enable-webrtc-capture-all-screens",
                "--enable-logging",
                "--auto-open-devtools-for-tabs"
            ],
            "preLaunchTask": "üîß Build WASM Modules (Containerized)",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "üì± Test PWA Features",
            "type": "chrome",
            "request": "launch",
            "file": "${workspaceFolder}/client/index.html",
            "webRoot": "${workspaceFolder}/client",
            "runtimeArgs": [
                "--disable-web-security",
                "--disable-features=VizDisplayCompositor",
                "--allow-file-access-from-files",
                "--enable-service-worker-on-file"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "üöÄ Launch for AI Testing",
            "type": "chrome",
            "request": "launch",
            "file": "${workspaceFolder}/client/index.html",
            "webRoot": "${workspaceFolder}/client",
            "runtimeArgs": [
                "--disable-web-security",
                "--disable-features=VizDisplayCompositor",
                "--allow-file-access-from-files",
                "--remote-debugging-port=9222"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "postDebugTask": "ü§ñ Run AI Test Suite"
        }
    ]
}