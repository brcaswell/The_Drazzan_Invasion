{
  "name": "drazzan-invasion-server",
  "version": "1.0.0",
  "description": "Node.js server for The Drazzan Invasion multiplayer game",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "docker:build": "docker build -t drazzan-server .",
    "docker:run": "docker run -p 3000:3000 -p 8080:8080 drazzan-server"
  },
  "keywords": [
